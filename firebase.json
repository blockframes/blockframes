{
  "hosting": [
    {
      "target": "storybook",
      "public": "dist/storybook"
    },
    {
      "target": "catalog",
      "public": "dist/apps/catalog/",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "redirects": [
        {
          "source": "/catalog/:path*",
          "destination": "/:path",
          "type": 301
        }
      ],
      "rewrites": [
        {
          "source": "/admin{,/**}",
          "function": "admin"
        },
        {
          "source": "/catalog/**",
          "destination": "/index.html"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "functions": {
    "predeploy": [
      "cat ./package.json | jq \"del(.scripts.postinstall)\" > dist/apps/backend-functions/package.json",
      "npm run lint backend-functions",
      "npm run build:backend-functions",
      "./ops/deploy_secrets.sh"
    ],
    "source": "dist/apps/backend-functions/"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
