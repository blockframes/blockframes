{
  "hosting": [
    {
      "target": "storybook",
      "public": "dist/storybook"
    },
    {
      "target": "current",
      "public": "dist/apps/",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/admin{,/**}",
          "function": "admin"
        },
        {
          "source": "/catalog{,/**}",
          "destination": "/catalog/index.html"
        },
        {
          "source": "**",
          "destination": "/catalog/index.html"
        }
      ]
    }
  ],
  "functions": {
    "predeploy": [
      "cat ./package.json | jq \"del(.scripts.postinstall)\" > dist/apps/backend-functions/package.json",
      "npm run lint backend-functions",
      "npm run build:backend-functions",
      "./ops/deploy_secrets.sh"
    ],
    "source": "dist/apps/backend-functions/"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
