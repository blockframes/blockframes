{
  "hosting": {
    "public": "dist/apps/",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/ip-upload{,/**}",
        "destination": "/ip-upload/index.html"
      },
      {
        "source": "/delivery{,/**}",
        "destination": "/delivery/index.html"
      },
      {
        "source": "/catalog{,/**}",
        "destination": "/catalog/index.html"
      },
      {
        "source": "/movie-financing{,/**}",
        "destination": "/movie-financing/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "cp ./package.json dist/apps/backend-functions/package.json",
      "npm --prefix \"$RESOURCE_DIR\" run lint backend-functions",
      "npm --prefix \"$RESOURCE_DIR\" run build:functions --configuration=${ENV:-production}",
      "./ops/deploy_secrets.sh"
    ],
    "source": "dist/apps/backend-functions/"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
