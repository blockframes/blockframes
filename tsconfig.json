{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      // Environment
      "@env": ["env/env.ts"],

      // Libraries
      "@blockframes/ip": ["libs/ip/src/index.ts"],
      "@blockframes/auth": ["libs/auth/src/index.ts"],
      "@blockframes/ui": ["libs/ui/src/index.ts"],
      "@blockframes/utils": ["libs/utils/src/index.ts"],
      "@blockframes/ethers": ["libs/ethers/src/index.ts"],
      "@blockframes/movie": ["libs/movie/src/index.ts"],
      "@blockframes/movie/*": ["libs/movie/src/lib/*"],
      "@blockframes/organization": ["libs/organization/src/index.ts"],
      "@blockframes/account": ["libs/account/src/index.ts"],
      "@blockframes/material": ["libs/material/src/lib/material/index.ts"],
      "@blockframes/template": ["libs/material/src/lib/template/index.ts"],
      "@blockframes/delivery-lib": ["libs/material/src/lib/delivery/index.ts"],
      "@blockframes/contracts": ["contracts/build"],
      "@blockframes/notification": ["libs/notification/index.ts"],

      // Applications
      "@blockframes/delivery": ["apps/delivery/delivery/src/index.ts"],
      "@blockframes/movie-financing": ["apps/movie-financing/movie-financing/src/index.ts"],
    },
    "module": "commonjs",
    "rootDir": "."
  },
  "exclude": ["node_modules", "tmp"]
}
