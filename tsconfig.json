{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "esNext",
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@env": [
        "env/env.ts"
      ],
      "@blockframes/ip": [
        "libs/ip/src/index.ts"
      ],
      // AUTH
      "@blockframes/auth": [
        "libs/auth/src/index.ts"
      ],
      "@blockframes/auth/*": [
        "libs/auth/src/lib/*"
      ],
      "@blockframes/auth/types": [
        "libs/auth/src/lib/+state/auth.firestore.ts"
      ],
      // UI
      "@blockframes/ui": [
        "libs/ui/src/index.ts"
      ],
      "@blockframes/ui/*": [
        "libs/ui/src/lib/*"
      ],

      // UTILS
      "@blockframes/utils": [
        "libs/utils/src/index.ts"
      ],
      "@blockframes/utils/*": [
        "libs/utils/src/lib/*"
      ],
      "@blockframes/utils/spreadsheet": [
        "libs/utils/src/lib/spreadsheet/index.ts"
      ],

      // MOVIE
      "@blockframes/movie": [
        "libs/movie/src/index.ts"
      ],
      "@blockframes/movie/movie*": [
        "libs/movie/src/lib/movie/*"
      ],
      "@blockframes/movie/import": [
        "libs/movie/src/lib/movie/components/import/import-movie.module.ts"
      ],
      "@blockframes/movie/types": [
        "libs/movie/src/lib/movie/+state/movie.firestore.ts"
      ],
      "@blockframes/movie/distribution-deals": [
        "libs/movie/src/lib/distribution-deals/index.ts"
      ],
      "@blockframes/movie/distribution-deals/*": [
        "libs/movie/src/lib/distribution-deals/*"
      ],

      // ETHERS
      "@blockframes/ethers": [
        "libs/ethers/src/index.ts"
      ],
      "@blockframes/ethers/*": [
        "libs/ethers/src/lib/*"
      ],

      // SMART-CONTRACT
      "@blockframes/smart-contracts/*": [
        "smart-contracts/build/*"
      ],
      "@blockframes/smart-contracts/quorum/*": [
        "smart-contracts/quorum/*"
      ],

      // ORGANIZATION
      "@blockframes/organization": [
        "libs/organization/src/index.ts"
      ],
      "@blockframes/organization/*": [
        "libs/organization/src/lib/*"
      ],
      "@blockframes/organization/types": [
        "libs/organization/src/lib/+state/organization.firestore.ts"
      ],
      "@blockframes/permissions/types": [
        "libs/organization/src/lib/permissions/+state/permissions.firestore.ts"
      ],

      // NOTIFICATIONS/INVITATIONS
      "@blockframes/invitation/types": [
        "libs/notification/src/lib/invitation/+state/invitation.firestore.ts"
      ],
      "@blockframes/notification/types": [
        "libs/notification/src/lib/notification/+state/notification.firestore.ts"
      ],
      "@blockframes/notification": [
        "libs/notification/src/index.ts"
      ],

      // DELIVERY/MATERIAL/TEMPLATES
      "@blockframes/material/material/types": [
        "libs/material/src/lib/material/+state/material.firestore.ts"
      ],
      "@blockframes/material/delivery/types": [
        "libs/material/src/lib/delivery/+state/delivery.firestore.ts"
      ],
      "@blockframes/material/template/types": [
        "libs/material/src/lib/template/+state/template.firestore.ts"
      ],
      "@blockframes/material/delivery/stakeholder/types": [
        "libs/material/src/lib/delivery/stakeholder/+state/stakeholder.firestore.ts"
      ],

      // PROFILE/ACCOUNT
      "@blockframes/account": [
        "libs/account/src/index.ts"
      ],
      "@blockframes/account/*": [
        "libs/account/src/lib/*"
      ],
      "@blockframes/material": [
        "libs/material/src/index.ts"
      ],
      "@blockframes/template": [
        "libs/material/src/index.ts"
      ],

      // CATALOG
      "@blockframes/catalog": [
        "libs/catalog/src/index.ts"
      ],
      "@blockframes/catalog/*": [
        "libs/catalog/src/lib/*"
      ],

      // CONTRACT
      "@blockframes/contract": [
        "libs/contract/src/index.ts"
      ],
      "@blockframes/contract/*": [
        "libs/contract/src/lib/*"
      ],

      // APPS
      "@blockframes/apps/delivery/*": [
        "apps/delivery/delivery/src/app/*"
      ],
      "@blockframes/apps/catalog/marketplace/*": [
        "apps/catalog/src/app/marketplace/*"
      ],
      "@blockframes/apps/catalog/dashboard/*": [
        "apps/catalog/src/app/dashboard/*"
      ],
      "@blockframes/apps/catalog/*": [
        "apps/catalog/catalog/src/app/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
